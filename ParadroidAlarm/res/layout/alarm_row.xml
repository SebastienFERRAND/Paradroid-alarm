<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_alarm"
    android:layout_width="fill_parent"
    android:layout_height="50dp" >

    <ToggleButton
        android:id="@+id/togglebuttononoff"
        android:layout_width="56dp"
        android:layout_height="33dp"
        android:layout_centerVertical="true"
        android:background="@drawable/toggle_me"
        android:textOff=""
        android:textOn="" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@+id/togglebuttononoff"
        android:layout_toLeftOf="@+id/deleteAlarm"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="#000000" >
        </TextView>

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:typeface="serif"
            android:textColor="#000000" >
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/deleteAlarm"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/delete_button" />

</RelativeLayout>