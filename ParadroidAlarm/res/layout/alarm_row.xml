<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_alarm"
    android:layout_width="fill_parent"
    android:layout_height="50dp" >

    <ToggleButton
        android:id="@+id/togglebuttononoff"
        android:layout_width="60dp"
        android:layout_height="28dp"
        android:layout_centerVertical="true"
        android:background="@drawable/toggle_me"
        android:textOff="Off"
        android:textOn="On"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_toLeftOf="@+id/deleteAlarm"
        android:layout_toRightOf="@+id/togglebuttononoff"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="serif" >
        </TextView>

        <TextView
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#000000"
            android:textSize="20sp"
            android:typeface="serif" >
        </TextView>
    </LinearLayout>

    <Button
        android:id="@+id/deleteAlarm"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/delete_background" />

</RelativeLayout>